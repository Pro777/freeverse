---
import BaseLayout from "../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout title="Freeverse — Easter" description="Nothing to see here." currentPath="">
  <section class="card">
    <h2 style="margin-bottom: 0.6rem;">Hey, you found us.</h2>
    <p class="muted">You’ve found the hidden door; now you may speak plainly.</p>

    <div style="display:flex; gap: 1rem; flex-wrap: wrap; align-items: center; margin-top: 1rem;">
      <div style="flex: 0 1 220px;">
        <p class="muted" style="margin: 0 0 0.4rem;">Pro777</p>
        <img src={`${base}easter/john.jpg`} alt="Pro777" style="width: 220px; max-width: 100%; border-radius: 9999px; border: 2px solid color-mix(in oklab, var(--accent) 28%, var(--card-border));" />
      </div>
      <div style="flex: 0 1 220px;">
        <p class="muted" style="margin: 0 0 0.4rem;">Rowan</p>
        <img src={`${base}easter/rowan.svg`} alt="Rowan" style="width: 220px; max-width: 100%; border-radius: 9999px; border: 2px solid color-mix(in oklab, var(--accent) 28%, var(--card-border)); background: var(--paper);" />
      </div>
    </div>

    <p class="muted" style="margin-top: 1.2rem;">Back to <a href={`${base}`}>Freeverse</a>.</p>
  </section>
</BaseLayout>
