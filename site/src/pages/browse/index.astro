---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { loadPoemMetas } from "../../lib/poems";

const base = import.meta.env.BASE_URL;

const poems = await loadPoemMetas();

poems.sort((a, b) => {
  const author = a.author.localeCompare(b.author);
  if (author !== 0) return author;
  return a.title.localeCompare(b.title);
});
---

<BaseLayout title="Explore poems · Freeverse" description="Explore poems discovered from meta/*.yml." currentPath="/browse">
  <section class="hero">
    <h1>Explore poems</h1>
    <p class="lede">
      Poems discovered from <code>meta/*.yml</code>. Click any title to read.
    </p>
  </section>

  <div class="card">
    <div class="kicker">
      <h2>Catalog</h2>
      <span class="pill">{poems.length} poems</span>
    </div>

    <ul class="list">
      {poems.map((p) => (
        <li>
          <div style="display:flex; gap:0.5rem; flex-wrap:wrap; align-items:baseline;">
            <a class="list-title" href={`${base}poem/${p.id}/`}>
              <strong>{p.title}</strong>
            </a>
            <span class="muted">— {p.author}</span>
          </div>
          <div class="muted" style="margin-top:0.25rem; font-family: var(--sans); font-size: 0.92rem;">
            {p.century}th century
            {p.text_in_repo ? "" : " · text not yet in repo"}
          </div>
        </li>
      ))}
    </ul>
  </div>
</BaseLayout>
